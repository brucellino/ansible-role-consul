pid_file = "./pidfile"

{% if vault_agent_auto_auth_enabled | bool | default(false) %}
auto_auth {
  {% if vault_agent_auto_auth_method == 'approle' %}
  method {
    type = "approle"
    mount_path = "{{ approle_mount_path }}"
    config = {
      role_id_file_path = /etc/vault_roleid
      remove_secret_id_file_after_reading = false
      secret_id_response_wrapping_path = "vault_secretid"
      role = "{{ vault_agent_role }}"
    }
  }
  {% endif %}

  sink "file" {
    config = {
      path = "/etc/.token"
    }
  }
}

{% endif %}

template {
  source      = "/etc/consul.d/consul-server.hcl.tmpl"
  destination = "/etc/consul.d/consul-server.hcl"
}

cache {
  use_auto_auth_token = true
}

listener "tcp" {
  address = "127.0.0.1:8100
}
